 .select{
  box-sizing: border-box;
  width: 100%;
  height: 26rpx;
  border-radius: 8rpx;
  align-items: center;
  padding: 0 20rpx;
 }
 .select_text{
   width: 100%;
   height: 26rpx;
  /* border: 1px solid; */
  font-size: 25rpx;
  flex: 1;
 }
 .select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
 }
 .select_img_rotate{
  transform:rotate(180deg); 
 }
 .option_box{
  position: absolute;
  top: 50rpx;
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
  overflow-y: auto;
  border-top: 0;
  background: rgba(0, 0, 0, .5);
  transition: height 0.3s;
 }
 .option{
  display: block;
  line-height: 40rpx;
  font-size: 26rpx;
  color: white;
  border-bottom: 1px solid #f5f5f5;
  padding: 10rpx;
 }
